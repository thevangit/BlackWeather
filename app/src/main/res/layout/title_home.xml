<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/trans_parent_black">

    <Button
        android:id="@+id/title_swap_button"
        style="@style/title_png_style"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/title_logo"
        style="@style/title_logo_style"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_logo"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/title_swap_button"
        app:layout_constraintStart_toEndOf="@+id/title_swap_button"
        app:layout_constraintTop_toTopOf="@+id/title_swap_button" />

    <Button
        android:id="@+id/title_settings_button"
        style="@style/title_png_style"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/title_delete_button"
        style="@style/title_png_style"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/title_settings_button"
        app:layout_constraintEnd_toStartOf="@+id/title_settings_button"
        app:layout_constraintTop_toTopOf="@+id/title_settings_button"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>